<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#ffd740"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp"
    tools:ignore="HardcodedText">

    <ImageButton
        android:id="@+id/cancel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#FFFFD740"
        android:contentDescription="@string/cancel"
        android:src="@drawable/ic_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:orientation="vertical">

            <ImageButton
                android:id="@+id/image_picker2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#fcc700"
                android:baselineAligned="false"
                android:contentDescription="Image Picker ..."
                android:scaleType="centerInside"
                android:src="@drawable/question_mark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/texttitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@drawable/z2lotel3n5"
                android:ems="7"
                android:gravity="center"
                android:hint="Title Here"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#151414"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dat_time4"
                    style="?attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FBC02D"
                    android:padding="3dp"
                    android:textColor="#282525"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/daily_timer" />

                <Button
                    android:id="@+id/dat_time3"
                    style="?attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="#FBC02D"
                    android:padding="3dp"
                    android:textColor="#282525"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/done2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/buttons"
        android:padding="3dp"
        android:text="Submit"
        android:textColor="#eeeeee"
        android:textSize="15sp"
        android:textStyle="bold"
        app:spinning_bar_color="#fff"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

    <Button
        android:id="@+id/dat_date1"
        style="?attr/buttonStyle"
        android:background="#F9A825"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_weight="1"
        android:padding="3dp"
        android:textColor="#282525"
        android:textSize="15sp"
        android:textStyle="bold" />


</android.support.v7.widget.CardView>